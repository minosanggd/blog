<div class="mt-4 px-4">
    <h3>CREATE A BLOG</h3>

    <form method="POST" action="/courses/store">
        <div class="form-floating mb-4">
            <input type="text" name="name" id="name" class="form-control" />
            <label class="form-label" for="name">Name</label>
        </div>
        <div class="form-floating mb-4">
            <input type="text" name="description" class="form-control" id="description">
            <label class="form-label" for="description">Desc</label>
        </div>

        <div class="form-floating mb-4">
            <input type="text" name="videoId" class="form-control" id="videoId">
            <label class="form-label" for="videoId">Video ID</label>
        </div>

        <div class="form-floating mb-4">
            <input type="text" name="content" class="form-control" id="content">
            <label class="form-label" for="content">Content</label>
        </div>
        <button type="submit" class='btn btn-primary mt-4'>Create a course</button>
    </form>

</div>